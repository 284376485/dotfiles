" PHP syntax check
function! PHP_CheckSyntax()
    setlocal makeprg=/usr/local/bin/php -l -n\ -d\ html_errors=off
    "setlocal shellpipe=>                 
    " Use error format for parsing PHP error output
    setlocal errorformat=%m\ in\ %f\ on\ line\ %l
    "setlocal errorformat=%*[^:]:\ %m\ in\ %f\ on\ line\ %l
    make %
endfunction
